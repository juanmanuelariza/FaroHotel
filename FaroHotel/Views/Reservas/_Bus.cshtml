<script>
    $(document).ready(function () {
        var dataArray = @Html.Raw(Json.Encode(@ViewBag.BusesIds));
        var _url = GetPathApp("/Reservas/OcupacionBus");
        $.ajax({
            method: "POST",
            url: _url,
            data: {
                ParamBusesIds: dataArray,
                __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val()
            },
            success: function (result) {                
                $.each(result, function () {
                    $("#BusId_" + this.BusId).find("[data-seat='" + this.NroButaca + "']").addClass('asientoOcupado').removeClass('asientoLibre');
                });
            }
        });
        //Asientos seleccionados durante la venta
        var ParamBusIdaIds = [];
        var ParamAsientosIdaIds = [];
        var ParamBusVueltaIds = [];
        var ParamAsientosVueltaIds = [];
        $(".BusIdaIds").each(function () {
            if ($(this).val() == "") {
                ParamBusIdaIds.push("0");
            }
            else {
                ParamBusIdaIds.push($(this).val());
            }
        });
        $(".ButacaBusIda").each(function () {
            if ($(this).text() == "") {
                ParamAsientosIdaIds.push("0");
            }
            else {
                ParamAsientosIdaIds.push($(this).text());
            }
        });
        $(".BusVueltaIds").each(function () {
            if ($(this).val() == "") {
                ParamBusVueltaIds.push("0");
            }
            else {
                ParamBusVueltaIds.push($(this).val());
            }
        });
        $(".ButacaBusVuelta").each(function () {
            if ($(this).text() == "") {
                ParamAsientosVueltaIds.push("0");
            }
            else {
                ParamAsientosVueltaIds.push($(this).text());
            }
        });
        for (i = 0; i < ParamAsientosIdaIds.length; i++) { 
            if (ParamBusIdaIds[i] > 0){
                $("#BusId_" + ParamBusIdaIds[i]).find("[data-seat='" + ParamAsientosIdaIds[i] + "']").addClass('asientoOcupado').removeClass('asientoLibre');
            }
        }
        for (i = 0; i < ParamAsientosVueltaIds.length; i++) { 
            if (ParamBusIdaIds[i] > 0){
                $("#BusId_" + ParamBusVueltaIds[i]).find("[data-seat='" + ParamAsientosVueltaIds[i] + "']").addClass('asientoOcupado').removeClass('asientoLibre');
            }
        }

    });

    function Selectedseat(elm) {
        var existB = $(elm).hasClass('asientoOcupado');
        if (existB != true) {
            var bus = $(elm).data("bus");
            var classs = $(elm).data("class");
            if ($(".asientoSeleccionado").size() > 0) {
                $(".asientoSeleccionado").removeClass("asientoSeleccionado");
            }
            if (classs == 'asientoLibre') {
                $(elm).addClass('asientoSeleccionado');
            }
            $(".seat_no").text("");
            $("#span_ButacaSel_" + bus).text($(elm).data("seat"));
            $("#ButacaSeleccionada").val($(elm).data("seat"));
            $("#BusSeleccionado").val(bus);
        }
    }

    $("#btnGuardar").unbind();
    $("#btnGuardar").click(function () {
        var BoxId = $("#BoxId").val();
        var BoxTrayecto = $("#BoxTrayecto").val();
        $("#Bus" + BoxTrayecto + "Id_" + BoxId).val($("#BusSeleccionado").val());
        $("#ButacaBus" + BoxTrayecto + "_" + BoxId).text($("#ButacaSeleccionada").val());
        cerrarModal();
    });

</script>
