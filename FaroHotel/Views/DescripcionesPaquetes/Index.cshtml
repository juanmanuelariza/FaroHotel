@model IEnumerable<FaroHotel.Models.TipoDescripcionPaquete>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="box-title">Listado de Roles</h2>
            <div class="clearfix"></div>
        </div>
        <!-- /.box-header -->
        <div class="x_content">
            <!-- Button trigger modal -->
            <button type="button" style="margin-bottom: 15px;" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/DescripcionesPaquetes/Create', 'Agregar', 'Descripción')">
                <i class="fa fa-plus"></i> Nuevo
            </button>
            <table id="dtDescripcionPaquetes" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Titulo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                <div class="btn-group-sm">
                                    <div class="btn-group-sm">
                                        <span data-placement="top" title="Detalles" data-toggle="tooltip">
                                            <a class="btn btn-default fa fa-file-text-o" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/DescripcionesPaquetes/Details/@item.ID','Detalle','Descripción')"></a>
                                        </span>
                                        <span data-placement="top" title="Editar" data-toggle="tooltip">
                                            <a class="btn btn-info fa fa-pencil-square-o" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/DescripcionesPaquetes/Edit/@item.ID','Editar','Descripción')"></a>
                                        </span>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>

<script type="text/javascript">
    $(function () {
        $('#dtDescripcionPaquetes').DataTable({
            "responsive": true,
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "language": DataTableEsp()
        });
    });
</script>
