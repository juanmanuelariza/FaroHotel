@model FaroHotel.Models.ResetPasswordViewModel

@{
    Layout = null;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="UserName">Usuario</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",@readonly= "readonly" })
            </div>
        </div>      
        <div class="form-group">
            <label class="control-label col-md-2" for="UserName">Contraseña</label>
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="UserName">Confirmar Contraseña</label>
            <div class="col-md-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

    </div>

}

<script type="text/javascript">
    InitModalSubmitAjax();
</script>