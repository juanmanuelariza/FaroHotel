<script>
    $(document).ready(function () {
        $("#dtFaroI").DataTable({
            "responsive": true,
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "language": DataTableEsp(),
            responsive: true,
            "dom": "Bfrtip",
            "buttons": [
                {
                    extend: 'excel',
                    text: '<i class="fa fa-file-excel-o"></i> Exportar a Excel',
                    title: 'Ocupación hotel FARO I para el día: ' + $('#FechaEntrada').val(),
