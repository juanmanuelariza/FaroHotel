
@if (ViewBag.HotelFaroICount > 0)
{
    <div class="x_panel">
        <div class="x_title">
            <h2 class="box-title">Ocupación de habitaciones FARO I</h2>
            <div class="clearfix"></div>
        </div>
        <!-- /.box-header -->
        <div class="x_content">
            <div id="DivFaroI" class="row form-horizontal">
                <div class="col-md-12">
                    <table id="dtFaroI" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Número de Habitación</th>
                                <th>Tipo de Habitación</th>
                                <th>Apellido Titular</th>
                                <th>Nombre Titular</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (FaroHotel.Models.GetOcupacionHoteles_Result item in ViewBag.HotelFaroI)
                            {
                                if (item.HotelId == 1)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumeroHabitacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoHabitacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
}
else
{
    <div class="x_panel">
        <div class="x_title">
            <h2 class="box-title">FARO I</h2>
            <div class="clearfix"></div>
        </div>
        <!-- /.box-header -->
        <div class="x_content">            
            No hay reservas para la fecha seleccionada en Hotel FARO I
        </div>
    </div>
}

