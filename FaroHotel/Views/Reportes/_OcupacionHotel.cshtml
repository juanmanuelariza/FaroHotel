                    customize: function (win) {
                        $(win.document.body)
                            .css('font-size', '10pt')
                        $(win.document.body).find('h1')
                            .css('display', 'none')
                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ]
        });
